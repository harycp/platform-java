<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*">

        <TableRow>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/off"
                android:text="OFF"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear"
                android:text="C"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/percent"
                android:text="%"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/division"
                android:text="รท"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn7"
                android:text="7"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn8"
                android:text="8"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn9"
                android:text="9"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/multiply"
                android:text="x"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn4"
                android:text="4"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn5"
                android:text="5"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn6"
                android:text="6"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/subtract"
                android:text="-"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                android:text="1"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                android:text="2"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                android:text="3"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/add"
                android:text="+"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn0"
                android:text="0"
                android:layout_span="2"
                android:layout_weight="2"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPoint"
                android:text="."
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/equal"
                android:text="="
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</LinearLayout>
