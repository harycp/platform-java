<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    tools:context=".ProfileActivity">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/hary"
            android:scaleType="centerCrop"
            android:background="@drawable/circle_shape"
            android:clipToOutline="true"
            />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hary Capri"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/profile_university"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Informatics Student at UPN Veteran Jakarta"
            android:textSize="16sp"
            android:textColor="#555"
            android:layout_marginTop="10dp" />

        <!-- Bio / Short Description -->
        <TextView
            android:id="@+id/profile_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fullstack Developer | Lead Developer at HMIF"
            android:textSize="14sp"
            android:textColor="#777"
            android:layout_marginTop="6dp"
            android:textAlignment="center" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCC"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="12dp" />

        <!-- Section: Interests & Skills -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interests and Skills"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="12dp" />

        <TextView
            android:id="@+id/profile_interests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽµ Singing | ðŸŽ¸ The Beatles Fan | ðŸ’» Fullstack Developer | ðŸ“• Book Reader"
            android:textSize="14sp"
            android:textColor="#555"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="6dp" />

        <!-- Section: Experience -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Experience"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/profile_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ… Fullstack Developer Intern at Dikti (SISTER Sarpras)\nâœ… Lead Developer for HMIF Platform Website\nâœ… Organizer of KERNEL Session and CODE"
            android:textSize="14sp"
            android:textColor="#555"
            android:layout_marginTop="6dp" />

    </LinearLayout>
</LinearLayout>
