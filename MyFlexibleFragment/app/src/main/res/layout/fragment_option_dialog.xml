<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".OptionDialogFragment">

    <!-- Pertanyaan -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Siapa pelatih tersukses Arsenal?"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textSize="18sp"
        android:textStyle="bold"  />

    <!-- Radio Group untuk Opsi Jawaban -->
    <RadioGroup
        android:id="@+id/rg_options"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rb_awr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Arsene Wenger"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioButton
            android:id="@+id/rb_unai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Unai Emery"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioButton
            android:id="@+id/rb_geor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="George Graham"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioButton
            android:id="@+id/rb_arteta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mikel Arteta"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />
    </RadioGroup>

    <!-- Tombol Aksi -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tutup"
            android:backgroundTint="@color/secondary"
            android:textColor="@color/white"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_choose"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Pilih"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            android:layout_marginStart="4dp" />
    </LinearLayout>
</LinearLayout>